<form autocomplete="off" novalidate>
   <div class="row">
      <div class="col my-2">
         <div class="form-row">
            <div class="form-group col-12 col-md-3">
               <label for="id">ID</label>
               <input id="id" name="id" type="text" class="form-control form-control-sm" placeholder="ID"
                  disabled>
            </div>
         </div>
         <div class="form-row">
            <div class="form-group col-12 col-md-6 col-lg-8">
               <label for="nome">Nome</label>
               <input id="nome" name="nome" type="text" class="form-control form-control-sm" placeholder="Nome"
                  required>
            </div>
            <div class="form-group col-12 col-md-6 col-lg-4">
               <label for="identificador">Identificador</label>
               <input id="identificador" name="identificador" type="text" class="form-control form-control-sm" placeholder="Identificador"
                  disabled>
            </div>
         </div>
      </div>
   </div>
</form>

<div class="row">
   <div class="col-12">
      <h6>Modelos</h6>
      <hr class="mt-0" />
   </div>
   <div class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-4">
      <form id="form-modelo" autocomplete="off" novalidate>
         <div class="d-flex align-items-end">
            <div class="flex-grow-1">
               <div class="form-row">
                  <div class="form-group col-12">
                     <label for="nome-modelo">Nome</label>
                     <input id="nome-modelo" name="nomeModelo" type="text" class="form-control form-control-sm" placeholder="Modelo">
                  </div>
               </div>
            </div>
            <div>
               <div class="form-row">
                  <div class="form-group col-12">
                     <button id="btn-modelo-adicionar" class="btn btn-primary btn-sm ml-2" type="button"></button>
                  </div>
               </div>
            </div>
         </div>
      </form>
   </div>
</div>

<div id="modelos" class="row">
   <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-4">
      <div class="list-group mb-2"></div>
   </div>
   <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-8">
      <div class="tab-content mt-1 d-none">
         <div class="tab-pane fade active hide">
            <form id="form-modelo-componente" autocomplete="off" novalidate>
               <div class="d-flex align-items-end">
                  <div class="flex-grow-1">
                     <div class="form-row">
                        <div class="form-group col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                           <label for="componente">Componente</label>
                           <select id="componente" name="componente" class="form-control form-control-sm">
                              <option selected>Selecione...</option>
                           </select>
                        </div>
                        <div class="form-group col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                           <label for="nome-componente">Nome</label>
                           <input id="nome-componente" name="nomeComponente" type="text" class="form-control form-control-sm" placeholder="Nome">
                        </div>
                     </div>
                  </div>
                  <div>
                     <div class="form-row">
                        <div class="form-group col-12">
                           <button id="btn-modelo-componente-add" class="btn btn-primary btn-sm ml-2" type="button"></button>
                        </div>
                     </div>
                  </div>
               </div>
            </form>

            <div class="row">
               <div class="col mb-2">
                  <div id="modelo-componente" class="d-flex flex-wrap">
                  </div>
               </div>
            </div>
            <div class="row">
               <div class="col mb-2">
                  <button id="btn-construir-modelo" class="btn btn-primary btn-sm" type="button"></button>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
