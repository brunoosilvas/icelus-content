<div class="row">
   <div class="col my-2">
      <div class="form-row">
         <div class="form-group col-12 col-md-3">
            <label for="id">ID</label>
            <input id="id" name="id" type="text" class="form-control" placeholder="ID" disabled>
         </div>
      </div>
      <div class="form-row">
         <div class="form-group col-12 col-md-6 col-lg-8">
            <label for="nome">Nome</label>
            <input id="nome" name="nome" type="text" class="form-control" placeholder="Nome" required>
         </div>
         <div class="form-group col-12 col-md-6 col-lg-4">
            <label for="identificador">Identificador</label>
            <input id="identificador" name="identificador" type="text" class="form-control" placeholder="Identificador"
               required disabled>
         </div>
      </div>
   </div>
</div>

<div class="row">
   <div class="col-12">
      <h5>Modelos</h5>
      <hr class="mt-0" />
   </div>
   <div class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-4">
      <div class="d-flex align-items-end">
         <div class="flex-grow-1">
            <div class="form-row">
               <div class="form-group col-12">
                  <label for="nome">Nome</label>
                  <input id="modelo" type="text" class="form-control" placeholder="Modelo">
               </div>
            </div>
         </div>
         <div>
            <div class="form-row">
               <div class="form-group col-12">
                  <button id="btn-modelo-adicionar" class="btn btn-primary ml-2" type="button">Adicionar</button>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>

<div id="modelos" class="row">
   <div class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-4">
      <div class="list-group"></div>
   </div>
   <div class="col-12 col-sm-12 col-md-12 col-lg-8 col-xl-8">
      <div class="tab-content mt-1">
         <div class="tab-pane fade active hide">

            <div class="d-flex align-items-end">
               <div class="flex-grow-1 ml-auto">
                  <div class="form-row">
                     <div class="form-group col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4">
                        <label for="componente">Componente</label>
                        <select id="componente" class="form-control">
                           <option selected>Selecione...</option>
                        </select>
                     </div>
                     <div class="form-group col-12 col-sm-6 col-md-6 col-lg-8 col-xl-8">
                        <label for="nome-componente">Nome</label>
                        <input id="nome-componente" type="text" class="form-control" placeholder="Nome">
                     </div>
                  </div>
               </div>
               <div>
                  <div class="form-row">
                     <div class="form-group col-12">
                        <button id="btn-modelo-componente-add" class="btn btn-primary ml-2" type="button">Adicionar</button>
                     </div>
                  </div>
               </div>
            </div>
            <div class="row">
               <div class="col">
                  <div id="modelo-componente" class="d-flex flex-wrap">
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
