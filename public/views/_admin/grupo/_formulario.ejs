<div class="row">
   <div class="col my-2">
      <div class="form-row">
         <div class="form-group col-12 col-md-3">
            <label for="id">ID</label>
            <input id="id" name="id" type="text" class="form-control" placeholder="ID" disabled>
         </div>
      </div>
      <div class="form-row">
         <div class="form-group col-12 col-md-6 col-lg-8">
            <label for="nome">Nome</label>
            <input id="nome" name="nome" type="text" class="form-control" placeholder="Nome" required>
         </div>
         <div class="form-group col-12 col-md-6 col-lg-4">
            <label for="identificador">Identificador</label>
            <input id="identificador" name="identificador" type="text" class="form-control" placeholder="Identificador"
               required disabled>
         </div>
      </div>
   </div>
</div>

<div class="row">
   <div class="col">
      <h5>Modelos</h5>
      <hr class="mt-0" />
   </div>

   <div class="col-12">

      <div class="row">
         <div class="col-12 col-lg-6 col-xl-4 mt-0 mb-2">
            <div id="modelo" class="input-group">
               <input type="text" class="form-control" placeholder="Modelo"
                  data-key="nome">
               <div class="input-group-append">
                  <span class="input-group-text"
                     data-key="nomeNormalizado">modelo-exemplo</span>
               </div>

               <button id="button-modelo-adicionar" class="btn btn-primary ml-2" type="button">Adicionar</button>
            </div>
         </div>
      </div>

   </div>
</div>

<div id="modelos" class="row">
   <div class="col-4">
      <div class="list-group"></div>
   </div>
   <div class="col-8">
      <div class="tab-content">
         <div class="tab-pane fade active hide">
            <div class="form-row">
               <div class="form-group col-4">
                  <label for="componente">Componente</label>
                  <select id="componente" class="form-control">
                     <option selected>Selecione...</option>
                  </select>
               </div>
            </div>

            <div class="row">
               <div class="col">
                  <table id="example" class="table table-striped table-bordered" style="width:100%">
                     <thead>
                        <tr>
                           <th>Name</th>
                           <th>Position</th>
                           <th>Office</th>
                           <th>Age</th>
                           <th>Start date</th>
                           <th>Salary</th>
                        </tr>
                     </thead>
                     <tbody>
                        <tr>
                           <td>Tiger Nixon</td>
                           <td>System Architect</td>
